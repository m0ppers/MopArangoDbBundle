<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mop_arangodb.connection_factory.class">Mop\ArangoDbBundle\Connection\Factory</parameter>
    </parameters>

    <services>
        <service
            id="mop_arangodb.connection_factory"
            class="%mop_arangodb.connection_factory.class%"/>
        <service
            id="mop_arangodb.connection"
            class="stdClass"
            factory-service="mop_arangodb.connection_factory"
            factory-method="createConnection"
            abstract="true" />
    </services>
</container>
